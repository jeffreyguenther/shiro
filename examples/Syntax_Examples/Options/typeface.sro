include "geom"

node Faces begin
    option input helvetica String("Helvetica")
    option input comic String ("Comic Sans MS")
end

graph typefaces begin
    f Faces
    t Text
    t.originX(100.00)
    t.originY(75.0)
    t.text("Hello world!")
    t.font(f.active)
    t.size(100.0)
    t.fill(ColorFromRGB(0, 0, 0, 1.0))
end
